<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:text=""
        android:gravity="center"

        android:ems="10"
        android:id="@+id/Textview5time"
        android:layout_marginTop="20dp"
       android:background="@drawable/timer"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:id="@+id/textViewtimer"
        android:layout_alignTop="@+id/Textview5time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:background="@drawable/roundedit"
        android:text=""
        android:hint="Enter OTP"
        android:gravity="center"
        android:ems="10"
        android:id="@+id/editText2otp"
        android:layout_below="@+id/Textview5time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Verify"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:id="@+id/button3verify"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/editText2otp"
         />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Resend Otp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        android:id="@+id/button3resendotp"
        android:layout_below="@+id/button3verify"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
